<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/image_view_destination"
        android:layout_width="@dimen/dp0"
        android:layout_height="@dimen/dp0"
        android:layout_marginStart="@dimen/dp16"
        android:layout_marginLeft="@dimen/dp16"
        android:layout_marginTop="@dimen/dp24"
        android:scaleType="fitXY"
        app:layout_constraintDimensionRatio="w,1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.25"
        app:srcCompat="@android:drawable/btn_star_big_on"
        android:onClick="editDestinationOnClick"/>

    <TextView
        android:id="@+id/text_view_season"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp24"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_marginTop="@dimen/dp32"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp24"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/image_view_destination"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_view_destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp24"
        android:layout_marginLeft="@dimen/dp24"
        android:layout_marginTop="@dimen/dp8"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/image_view_destination"
        app:layout_constraintTop_toBottomOf="@+id/text_view_season" />
</android.support.constraint.ConstraintLayout>